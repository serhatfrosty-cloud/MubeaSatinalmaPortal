@using Microsoft.AspNetCore.Http
@using Microsoft.Extensions.Localization
@using MubeaSatinalmaPortal.Resources
@inject IStringLocalizer<SharedResources> Localizer

@{
    ViewData["Title"] = "Mubea Satın Alma Portalı";

    bool kullaniciLoginMi = Context.Session.GetString("User") != null;

    // Yetki hatası kontrolü (URL'den gelen error parametresi)
    string errorParam = Context.Request.Query["error"];
}

<!-- YENİ: Yetki hatası mesajı -->
@if (!string.IsNullOrEmpty(errorParam))
{
    if (errorParam == "unauthorized")
    {
        <div class="alert alert-danger text-center m-0">
            ⚠️ Bu sayfayı görüntüleme yetkiniz bulunmamaktadır. Lütfen sistem yöneticinize başvurun.
        </div>
    }
    else if (errorParam == "no_department")
    {
        <div class="alert alert-warning text-center m-0">
            ⚠️ Departman bilginiz sistemde tanımlı değil. Lütfen sistem yöneticinize başvurun.
        </div>
    }
}

<!-- Talep kayıt başarılı mesajı -->
@if (TempData["SaveSuccess"] != null)
{
    <div class="alert alert-success text-center m-0">
        @TempData["SaveSuccess"]
    </div>
}

<!-- Talep kayıt hata mesajı -->
@if (TempData["SaveError"] != null)
{
    <div class="alert alert-danger text-center m-0">
        @TempData["SaveError"]
    </div>
}

<!-- Login hatası varsa (sadece login olmayan kullanıcı için) -->
@if (!kullaniciLoginMi && TempData["LoginError"] != null)
{
    <div class="alert alert-danger text-center m-0">
        @TempData["LoginError"]
    </div>
}

<div class="hero-section d-flex align-items-center">
    <div class="container">
        <div class="row align-items-center">

            <!-- SOL TARAF: Tanıtım + Talep Oluştur -->
            <div class="col-lg-7">
                <h1 class="display-4 fw-bold mb-3">
                    Mubea <span class="text-primary">@Localizer["PurchasingRequestPortal"]</span>
                </h1>

                <p class="lead mb-4">
                    @Localizer["PortalDescription"]
                </p>

                <ul class="feature-list mb-4">
                    <li>📝 @Localizer["Feature1"]</li>
                    <li>📊 @Localizer["Feature2"]</li>
                    <li>✅ @Localizer["Feature3"]</li>
                    <li>📂 @Localizer["Feature4"]</li>
                </ul>
                @if (kullaniciLoginMi)
                {
                    <!-- Login olmuş kullanıcı için buton -->
                    <a asp-controller="Talep" asp-action="Create" class="btn btn-success btn-lg px-4">
                        @Localizer["CreateRequest"]
                    </a>
                }
                else
                {
                    <p class="text-muted small">
                        @Localizer["LoginRequiredMessage"]
                    </p>
                }
            </div>

            <!-- SAĞ TARAF: LOGIN FORMU (sadece login olunmadıysa) -->
            @if (!kullaniciLoginMi)
            {
                <div class="col-lg-5 mt-4 mt-lg-0">
                    <div class="info-card shadow-lg p-4 bg-white">
                        <h5 class="fw-bold mb-3 text-center">@Localizer["LoginToPortal"]</h5>

                        <form asp-controller="Account" asp-action="Login" method="post">
                            <div class="mb-3">
                                <label class="form-label">@Localizer["Username"]</label>
                                <input type="text" name="username" class="form-control" required />
                            </div>

                            <div class="mb-3">
                                <label class="form-label">@Localizer["Password"]</label>
                                <input type="password" name="password" class="form-control" required />
                            </div>

                            <button type="submit" class="btn btn-primary w-100">@Localizer["Login"]</button>
                        </form>

                        <hr class="my-4" />

                        <div class="small text-muted">
                            Giriş yaparken sorun yaşıyorsanız lütfen Mubea IT departmanı ile iletişime geçin.
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
