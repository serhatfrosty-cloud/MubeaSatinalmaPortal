@using Microsoft.AspNetCore.Http

@{
    bool kullaniciLoginMi = Context.Session.GetString("User") != null;
    int? userLevel = Context.Session.GetInt32("UserLevel");
    bool onayYetkisiVar = userLevel.HasValue && userLevel.Value >= 1 && userLevel.Value <= 3;
    string displayName = Context.Session.GetString("UserDisplayName") ?? "";
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Mubea Satın Alma Portalı</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
          crossorigin="anonymous">

    <style>
        body {
            min-height: 100vh;
            display: flex;
            flex-direction: column;
            background: #f4f6f9;
            font-family: system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI", sans-serif;
        }

        .mubea-navbar {
            background: linear-gradient(90deg, #003366, #005a9c);
        }

        .mubea-navbar .navbar-brand {
            font-weight: 700;
            letter-spacing: 0.08em;
            text-transform: uppercase;
        }

        .mubea-navbar .navbar-brand span {
            color: #00b0f0;
        }

        .mubea-navbar .nav-link {
            color: #e2e8f0 !important;
            font-weight: 500;
        }

        .mubea-navbar .btn-login {
            border-radius: 999px;
            font-weight: 600;
        }

        .hero-section {
            flex: 1;
            padding: 3rem 0 4rem 0;
            background: radial-gradient(circle at top left, #e0f2fe 0, #f4f6f9 45%, #eef2ff 100%);
        }

        footer.mubea-footer {
            background: #0f172a;
            color: #94a3b8;
            font-size: 0.85rem;
        }
    </style>

    @RenderSection("Styles", required: false)
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark mubea-navbar">
        <div class="container">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                MUBEA <span>ServiceHub</span>
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mubeaNavbar"
                    aria-controls="mubeaNavbar" aria-expanded="false" aria-label="Menüyü Aç">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="mubeaNavbar">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Index">@Localizer["Welcome"]</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="https://10.37.1.9/duyuru_ekrani/">@Localizer["AnnouncementScreen"]</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="https://10.37.1.9/duyuru_ekrani/">@Localizer["WorkSafety"]</a>
                    </li>

                    @if (kullaniciLoginMi)
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Talep" asp-action="Create">
                                @Localizer["CreateRequest"]
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Talep" asp-action="Index">
                                @Localizer["RequestList"]
                            </a>
                        </li>

                        @if (onayYetkisiVar)
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Talep" asp-action="OnayBekleyenler">
                                    @Localizer["PendingApprovals"]
                                </a>
                            </li>
                        }

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Rapor" asp-action="Index">
                                @Localizer["Reports"]
                            </a>
                        </li>
                    }
                </ul>

                <!-- DİL SEÇİCİ DROPDOWN -->
                <div class="dropdown me-3">
                    @{
                        var requestCulture = Context.Features.Get<IRequestCultureFeature>();
                        var currentCulture = requestCulture?.RequestCulture.Culture.Name ?? "tr-TR";

                        var flagIcon = currentCulture switch
                        {
                            "tr-TR" => "🇹🇷",
                            "en-US" => "🇬🇧",
                            "de-DE" => "🇩🇪",
                            _ => "🌍"
                        };

                        var langName = currentCulture switch
                        {
                            "tr-TR" => "Türkçe",
                            "en-US" => "English",
                            "de-DE" => "Deutsch",
                            _ => "Language"
                        };
                    }

                    <button class="btn btn-sm btn-outline-light dropdown-toggle"
                            type="button"
                            id="languageDropdown"
                            data-bs-toggle="dropdown"
                            aria-expanded="false">
                        @flagIcon @langName
                    </button>

                    <!-- DEBUG -->
                    <div class="alert alert-warning small">
                        <strong>DEBUG:</strong><br />
                        Culture: @(Context.Features.Get<IRequestCultureFeature>()?.RequestCulture.Culture.Name ?? "NULL")<br />
                        Cookie: @Context.Request.Cookies[".AspNetCore.Culture"]<br />
                        Localizer["Welcome"]: @Localizer["Welcome"]
                    </div>

                    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="languageDropdown">
                        <li>
                            <a class="dropdown-item @(currentCulture == "tr-TR" ? "active" : "")"
                               asp-controller="Language"
                               asp-action="SetLanguage"
                               asp-route-culture="tr-TR"
                               asp-route-returnUrl="@Context.Request.Path">
                                🇹🇷 Türkçe
                            </a>
                        </li>
                        <li>
                            <a class="dropdown-item @(currentCulture == "en-US" ? "active" : "")"
                               asp-controller="Language"
                               asp-action="SetLanguage"
                               asp-route-culture="en-US"
                               asp-route-returnUrl="@Context.Request.Path">
                                🇬🇧 English
                            </a>
                        </li>
                        <li>
                            <a class="dropdown-item @(currentCulture == "de-DE" ? "active" : "")"
                               asp-controller="Language"
                               asp-action="SetLanguage"
                               asp-route-culture="de-DE"
                               asp-route-returnUrl="@Context.Request.Path">
                                🇩🇪 Deutsch
                            </a>
                        </li>
                    </ul>
                </div>

                <div class="d-flex align-items-center">
                    @if (kullaniciLoginMi)
                    {
                        <span class="me-3 text-light small">
                            @(!string.IsNullOrEmpty(displayName) ? displayName : Context.Session.GetString("User"))
                        </span>
                        <a asp-controller="Account" asp-action="Logout"
                           class="btn btn-outline-light btn-sm btn-login px-3">
                            @Localizer["Logout"]
                        </a>
                    }
                    else
                    {
                        <a asp-controller="Home" asp-action="Index"
                           class="btn btn-outline-light btn-sm btn-login px-3">
                            @Localizer["Login"]
                        </a>
                    }
                </div>
            </div>
        </div>
    </nav>

    <main role="main">
        @RenderBody()
    </main>

    <footer class="mubea-footer py-3 mt-auto">
        <div class="container text-center">
            © @DateTime.Now.Year Mubea – @Localizer["PurchasingRequestPortal"] (IT Department)
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
            crossorigin="anonymous"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>