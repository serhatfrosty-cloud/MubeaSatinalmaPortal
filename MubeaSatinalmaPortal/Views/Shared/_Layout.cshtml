@using Microsoft.AspNetCore.Http

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Mubea Satın Alma Portalı</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Bootstrap (CDN) -->
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
          crossorigin="anonymous">

    <style>
        body {
            min-height: 100vh;
            display: flex;
            flex-direction: column;
            background: #f4f6f9;
            font-family: system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI", sans-serif;
        }

        .mubea-navbar {
            background: linear-gradient(90deg, #003366, #005a9c);
        }

        .mubea-navbar .navbar-brand {
            font-weight: 700;
            letter-spacing: 0.08em;
            text-transform: uppercase;
        }

        .mubea-navbar .navbar-brand span {
            color: #00b0f0;
        }

        .mubea-navbar .nav-link {
            color: #e2e8f0 !important;
            font-weight: 500;
        }

        .mubea-navbar .btn-login {
            border-radius: 999px;
            font-weight: 600;
        }

        .hero-section {
            flex: 1;
            padding: 3rem 0 4rem 0;
            background: radial-gradient(circle at top left, #e0f2fe 0, #f4f6f9 45%, #eef2ff 100%);
        }

        footer.mubea-footer {
            background: #0f172a;
            color: #94a3b8;
            font-size: 0.85rem;
        }
    </style>

    @RenderSection("Styles", required: false)
</head>
<body>
    @{
        bool kullaniciLoginMi = Context.Session.GetString("User") != null;
        int? userLevel = Context.Session.GetInt32("UserLevel");
        bool onayYetkisiVar = userLevel.HasValue && userLevel.Value >= 1 && userLevel.Value <= 3;
        string displayName = Context.Session.GetString("UserDisplayName") ?? "";
    }

    <!-- ÜST MENÜ (NAVBAR) -->
    <nav class="navbar navbar-expand-lg navbar-dark mubea-navbar">
        <div class="container">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                MUBEA <span>ServiceHub</span>
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mubeaNavbar"
                    aria-controls="mubeaNavbar" aria-expanded="false" aria-label="Menüyü Aç">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="mubeaNavbar">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <!-- HERKES İÇİN GÖRÜNEN -->
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Index">Anasayfa</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="https://10.37.1.9/duyuru_ekrani/">Duyuru Ekranı</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="https://10.37.1.9/duyuru_ekrani/">İş Güvenliği</a>
                    </li>


                    @if (kullaniciLoginMi)
                    {
                        <!-- Giriş yapan herkes için -->
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Talep" asp-action="Create">
                                Yeni Talep Oluştur
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Talep" asp-action="Index">
                                Talep Listesi
                            </a>
                        </li>

                        @* SADECE ONAY YETKİSİ OLANLAR (YÖNETİCİ / SATINALMA / GENEL MÜDÜR) *@
                        @if (onayYetkisiVar)
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Talep" asp-action="OnayBekleyenler">
                                    Bekleyen Onaylarım
                                </a>
                            </li>
                        }

                        @* Raporlar ileride genişletilebilir *@
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Rapor" asp-action="Index">
                                Raporlar
                            </a>
                        </li>
                    }
                </ul>

                <!-- SAĞ TARAFTAKİ KULLANICI / GİRİŞ - ÇIKIŞ ALANI -->
                <div class="d-flex align-items-center">
                    @if (kullaniciLoginMi)
                    {
                        <span class="me-3 text-light small">
                            @(!string.IsNullOrEmpty(displayName) ? displayName : Context.Session.GetString("User"))
                        </span>
                        <a asp-controller="Account" asp-action="Logout"
                           class="btn btn-outline-light btn-sm btn-login px-3">
                            Çıkış Yap
                        </a>
                    }
                    else
                    {
                        <a asp-controller="Home" asp-action="Index"
                           class="btn btn-outline-light btn-sm btn-login px-3">
                            Giriş Yap
                        </a>
                    }
                </div>
            </div>
        </div>
    </nav>

    <!-- SAYFA İÇERİĞİ -->
    <main role="main">
        @RenderBody()
    </main>

    <!-- ALT BİLGİ -->
    <footer class="mubea-footer py-3 mt-auto">
        <div class="container text-center">
            © @DateTime.Now.Year Mubea – Satın Alma Talep Portalı (IT Department)
        </div>
    </footer>

    <!-- JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
            crossorigin="anonymous"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
