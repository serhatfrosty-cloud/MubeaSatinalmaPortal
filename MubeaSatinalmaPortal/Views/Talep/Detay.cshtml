@model MubeaSatinalmaPortal.Models.TalepDetayViewModel

@{
    ViewData["Title"] = "Talep Detayı - " + Model.TalepNo;
}

<div class="container mt-4">
    <h2 class="mb-3">Talep Detayı</h2>
    <a asp-controller="Rapor"
       asp-action="TalepFormPdf"
       asp-route-id="@Model.TalepID"
       class="btn btn-outline-primary btn-sm">
        Yazdır
    </a>

    @if (TempData["SaveError"] != null)
    {
        <div class="alert alert-danger">
            @TempData["SaveError"]
        </div>
    }

    @if (TempData["SaveSuccess"] != null)
    {
        <div class="alert alert-success">
            @TempData["SaveSuccess"]
        </div>
    }

    <div class="card mb-4 shadow-sm">
        <div class="card-body">
            <h4 class="card-title mb-3">@Model.TalepNo</h4>

            <div class="row mb-2">
                <div class="col-md-3">
                    <strong>Oluşturma Tarihi:</strong><br />
                    @Model.CreatedDate.ToString("dd.MM.yyyy HH:mm")
                </div>
                <div class="col-md-3">
                    <strong>Oluşturan Kullanıcı:</strong><br />
                    @Model.CreatedByUser
                </div>
                <div class="col-md-3">
                    <strong>Departman:</strong><br />
                    @Model.DepartmanKodu - @Model.DepartmanAciklama
                </div>
                <div class="col-md-3">
                    <strong>Cost Center:</strong><br />
                    @Model.CostCenterCode - @Model.CostCenterDescription
                </div>
            </div>

            <div class="row mb-2">
                <div class="col-md-3">
                    <strong>Hizmet Tipi:</strong><br />
                    @Model.HizmetKodu - @Model.HizmetAciklamasi
                </div>
                <div class="col-md-3">
                    <strong>Talep Durumu:</strong><br />
                    @Model.TalepStatusKisa
                </div>
                <div class="col-md-6">
                    <strong>Durum Açıklaması:</strong><br />
                    @Model.TalepStatusAciklama
                </div>
            </div>

            <hr />

            @if (Model.KullaniciOnayVerebilirMi)
            {
                <div class="alert alert-warning">
                    Bu talep üzerinde <strong>ONAY / RED</strong> yetkiniz bulunmaktadır.
                </div>

                <form method="post">
                    <div class="mb-3">
                        <label class="form-label fw-semibold">Onay / Red Notu (opsiyonel)</label>
                        <textarea name="onayNotu" class="form-control" rows="3"
                              placeholder="Onay veya red için açıklama girebilirsiniz."></textarea>
                    </div>

                    <div class="d-flex gap-2">
                        <button type="submit"
                                asp-controller="Talep"
                                asp-action="Onayla"
                                asp-route-id="@Model.TalepID"
                                class="btn btn-success">
                            ✅ Onayla
                        </button>

                        <button type="submit"
                                asp-controller="Talep"
                                asp-action="Reddet"
                                asp-route-id="@Model.TalepID"
                                class="btn btn-danger">
                            ❌ Reddet
                        </button>

                        <a asp-controller="Talep" asp-action="OnayBekleyenler" class="btn btn-secondary ms-auto">
                            ← Bekleyen Onaylarıma Dön
                        </a>

                    </div>
                </form>
            }
            else
            {
                <div class="alert alert-secondary">
                    Bu talep üzerinde onay yetkiniz bulunmamaktadır veya talep bu aşamada değildir.
                </div>

                <a asp-controller="Talep" asp-action="OnayBekleyenler" class="btn btn-secondary">
                    ← Bekleyen Onaylarıma Dön
                </a>
            }
        </div>
    </div>

    <h5>Talep Satırları</h5>

    <div class="table-responsive mb-4">
        <table class="table table-bordered table-sm align-middle">
            <thead class="table-light">
                <tr>
                    <th>Satır</th>
                    <th>Adet</th>
                    <th>Birim</th>
                    <th>Malzeme Tanımı</th>
                    <th>Talep Gerekçesi</th>
                    <th>Tavsiye Edilen Tedarikçi</th>
                    <th>Fiyat</th>
                    <th>Para Birimi</th>
                    <th>Tedarikçi Ürün Kodu</th>
                    <th>Talep Tipi</th>
                    <th>İhtiyaç Termini</th>
                    <th>Talep Eden</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var s in Model.Satirlar)
                {
                    <tr>
                        <td>@s.TalepDetailsRows</td>
                        <td>@(s.TalepAdet?.ToString("0.##"))</td>
                        <td>@s.TalepBirim</td>
                        <td>@s.TalepMalzeme</td>
                        <td>@s.TalepGerekce</td>
                        <td>@s.TavsiyeTedarikci</td>
                        <td>@(s.TalepFiyat?.ToString("0.##"))</td>
                        <td>@s.FiyatParaBirimi</td>
                        <td>@s.TedarikciUrunKodu</td>
                        <td>@s.TalepTipi</td>
                        <td>@(s.TalepTermin?.ToString("dd.MM.yyyy"))</td>
                        <td>@s.TalepEdenKisi</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <h5>Onay / Red Geçmişi</h5>

    @if (Model.OnayLoglari != null && Model.OnayLoglari.Any())
    {
        <div class="table-responsive mb-4">
            <table class="table table-bordered table-sm align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Tarih / Saat</th>
                        <th>İşlem</th>
                        <th>Eski Durum</th>
                        <th>Yeni Durum</th>
                        <th>İşlem Yapan</th>
                        <th>Seviye</th>
                        <th>Onay / Red Notu</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var log in Model.OnayLoglari)
                    {
                        <tr>
                            <td>@log.IslemTarihi.ToString("dd.MM.yyyy HH:mm")</td>
                            <td>@log.IslemTipi</td>
                            <td>@(string.IsNullOrEmpty(log.EskiStatusText) ? log.EskiStatusId.ToString() : log.EskiStatusText)</td>
                            <td>@(string.IsNullOrEmpty(log.YeniStatusText) ? log.YeniStatusId.ToString() : log.YeniStatusText)</td>
                            <td>@log.IslemYapanUser</td>
                            <td>@log.IslemYapanLevel</td>
                            <td>@(string.IsNullOrWhiteSpace(log.OnayNotu) ? "-" : log.OnayNotu)</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-secondary mb-4">
            Bu talep için henüz herhangi bir onay / red kaydı bulunmamaktadır.
        </div>
    }
</div>
