@model MubeaSatinalmaPortal.Models.TalepDetayViewModel

@using Microsoft.Extensions.Localization
@using MubeaSatinalmaPortal
@inject IStringLocalizer<SharedResources> Localizer

@{
    ViewData["Title"] = Localizer["RequestDetail"] + " - " + Model.TalepNo;
}

<div class="container mt-4">
    <h2 class="mb-3">@Localizer["RequestDetail"]</h2>
    <a asp-controller="Rapor"
       asp-action="TalepFormPdf"
       asp-route-id="@Model.TalepID"
       class="btn btn-outline-primary btn-sm">
        @Localizer["Print"]
    </a>

    @if (TempData["SaveError"] != null)
    {
        <div class="alert alert-danger">
            @TempData["SaveError"]
        </div>
    }

    @if (TempData["SaveSuccess"] != null)
    {
        <div class="alert alert-success">
            @TempData["SaveSuccess"]
        </div>
    }

    <div class="card mb-4 shadow-sm">
        <div class="card-body">
            <h4 class="card-title mb-3">@Model.TalepNo</h4>

            <div class="row mb-2">
                <div class="col-md-3">
                    <strong>@Localizer["CreationDate"]:</strong><br />
                    @Model.CreatedDate.ToString("dd.MM.yyyy HH:mm")
                </div>
                <div class="col-md-3">
                    <strong>@Localizer["CreatingUser"]:</strong><br />
                    @Model.CreatedByUser
                </div>
                <div class="col-md-3">
                    <strong>@Localizer["Department"]:</strong><br />
                    @Model.DepartmanKodu - @Model.DepartmanAciklama
                </div>
                <div class="col-md-3">
                    <strong>@Localizer["CostCenter"]:</strong><br />
                    @Model.CostCenterCode - @Model.CostCenterDescription
                </div>
            </div>

            <div class="row mb-2">
                <div class="col-md-3">
                    <strong>@Localizer["ServiceType"]:</strong><br />
                    @Model.HizmetKodu - @Model.HizmetAciklamasi
                </div>
                <div class="col-md-3">
                    <strong>@Localizer["RequestStatus"]:</strong><br />
                    @Model.TalepStatusKisa
                </div>
                <div class="col-md-6">
                    <strong>@Localizer["StatusDescription"]:</strong><br />
                    @Model.TalepStatusAciklama
                </div>
            </div>

            <hr />

            @if (Model.KullaniciOnayVerebilirMi)
            {
                <div class="alert alert-warning">
                    @Localizer["YouCanApproveReject"]
                </div>

                <form method="post">
                    <div class="mb-3">
                        <label class="form-label fw-semibold">@Localizer["ApprovalRejectNote"] (@Localizer["Optional"])</label>
                        <textarea name="onayNotu" class="form-control" rows="3"
                              placeholder="@Localizer["ApprovalNoteHint"]"></textarea>
                    </div>

                    <div class="d-flex gap-2">
                        <button type="submit"
                                asp-controller="Talep"
                                asp-action="Onayla"
                                asp-route-id="@Model.TalepID"
                                class="btn btn-success">
                            ✅ @Localizer["Approve"]
                        </button>

                        <button type="submit"
                                asp-controller="Talep"
                                asp-action="Reddet"
                                asp-route-id="@Model.TalepID"
                                class="btn btn-danger">
                            ❌ @Localizer["Reject"]
                        </button>

                        <a asp-controller="Talep" asp-action="OnayBekleyenler" class="btn btn-secondary ms-auto">
                            ← @Localizer["BackToPendingApprovals"]
                        </a>
                    </div>
                </form>
            }
            else
            {
                <div class="alert alert-secondary">
                    @Localizer["NoApprovalAuthority"]
                </div>

                <a asp-controller="Talep" asp-action="OnayBekleyenler" class="btn btn-secondary">
                    ← @Localizer["BackToPendingApprovals"]
                </a>
            }
        </div>
    </div>

    <h5>@Localizer["RequestLines"]</h5>

    <div class="table-responsive mb-4">
        <table class="table table-bordered table-sm align-middle">
            <thead class="table-light">
                <tr>
                    <th>@Localizer["Line"]</th>
                    <th>@Localizer["Quantity"]</th>
                    <th>@Localizer["Unit"]</th>
                    <th>@Localizer["MaterialDescription"]</th>
                    <th>@Localizer["Reason"]</th>
                    <th>@Localizer["RecommendedSupplier"]</th>
                    <th>@Localizer["Price"]</th>
                    <th>@Localizer["Currency"]</th>
                    <th>@Localizer["SupplierProductCode"]</th>
                    <th>@Localizer["RequestType"]</th>
                    <th>@Localizer["RequirementDeadline"]</th>
                    <th>@Localizer["Requester"]</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var s in Model.Satirlar)
                {
                    <tr>
                        <td>@s.TalepDetailsRows</td>
                        <td>@(s.TalepAdet?.ToString("0.##"))</td>
                        <td>@s.TalepBirim</td>
                        <td>@s.TalepMalzeme</td>
                        <td>@s.TalepGerekce</td>
                        <td>@s.TavsiyeTedarikci</td>
                        <td>@(s.TalepFiyat?.ToString("0.##"))</td>
                        <td>@s.FiyatParaBirimi</td>
                        <td>@s.TedarikciUrunKodu</td>
                        <td>@s.TalepTipi</td>
                        <td>@(s.TalepTermin?.ToString("dd.MM.yyyy"))</td>
                        <td>@s.TalepEdenKisi</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <h5>@Localizer["ApprovalHistory"]</h5>

    @if (Model.OnayLoglari != null && Model.OnayLoglari.Any())
    {
        <div class="table-responsive mb-4">
            <table class="table table-bordered table-sm align-middle">
                <thead class="table-light">
                    <tr>
                        <th>@Localizer["DateTime"]</th>
                        <th>@Localizer["Action"]</th>
                        <th>@Localizer["OldStatus"]</th>
                        <th>@Localizer["NewStatus"]</th>
                        <th>@Localizer["ActionBy"]</th>
                        <th>@Localizer["Level"]</th>
                        <th>@Localizer["Note"]</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var log in Model.OnayLoglari)
                    {
                        <tr>
                            <td>@log.IslemTarihi.ToString("dd.MM.yyyy HH:mm")</td>
                            <td>@log.IslemTipi</td>
                            <td>@(string.IsNullOrEmpty(log.EskiStatusText) ? log.EskiStatusId.ToString() : log.EskiStatusText)</td>
                            <td>@(string.IsNullOrEmpty(log.YeniStatusText) ? log.YeniStatusId.ToString() : log.YeniStatusText)</td>
                            <td>@log.IslemYapanUser</td>
                            <td>@log.IslemYapanLevel</td>
                            <td>@(string.IsNullOrWhiteSpace(log.OnayNotu) ? "-" : log.OnayNotu)</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-secondary mb-4">
            @Localizer["NoApprovalHistory"]
        </div>
    }
</div>