@model List<MubeaSatinalmaPortal.Models.TalepListItemViewModel>

@using Microsoft.Extensions.Localization
@using MubeaSatinalmaPortal
@inject IStringLocalizer<SharedResources> Localizer

@{
    ViewData["Title"] = Localizer["PendingApprovals"];
    string currentUser = ViewBag.CurrentUser as string ?? "KULLANICI";
    int userLevel = ViewBag.UserLevel != null ? (int)ViewBag.UserLevel : 0;

    string rolAdi = userLevel switch
    {
        1 => Localizer["DepartmentManager"],
        2 => Localizer["Purchasing"],
        3 => Localizer["GeneralManager"],
        _ => Localizer["User"]
    };
}

<div class="container mt-4">
    <h2 class="mb-2">@Localizer["PendingApprovals"]</h2>
    <p class="text-muted mb-3">
        @Localizer["Hello"] <strong>@currentUser</strong> (@rolAdi)
    </p>

    @if (TempData["SaveSuccess"] != null)
    {
        <div class="alert alert-success">
            @TempData["SaveSuccess"]
        </div>
    }

    @if (TempData["SaveError"] != null)
    {
        <div class="alert alert-danger">
            @TempData["SaveError"]
        </div>
    }

    @if (ViewBag.InfoMessage != null)
    {
        <div class="alert alert-info">
            @ViewBag.InfoMessage
        </div>
    }

    @if (Model != null && Model.Any())
    {
        <div class="mb-3">
            <label class="form-label fw-semibold">@Localizer["Filter"]</label>
            <input type="text"
                   id="filterInput"
                   class="form-control"
                   placeholder="@Localizer["FilterPlaceholder"]"
                   onkeyup="filterTable()" />
            <small class="text-muted">
                @Localizer["FilterHint"]
            </small>
        </div>

        <div class="table-responsive">
            <table class="table table-striped table-hover table-sm" id="talepTable">
                <thead class="table-light">
                    <tr>
                        <th>@Localizer["RequestNo"]</th>
                        <th>@Localizer["CreationDate"]</th>
                        <th>@Localizer["Department"]</th>
                        <th>@Localizer["CostCenter"]</th>
                        <th>@Localizer["ServiceType"]</th>
                        <th>@Localizer["Status"]</th>
                        <th>@Localizer["StatusDescription"]</th>
                        <th style="width:120px;">@Localizer["Action"]</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.TalepNo</td>
                            <td>@item.CreatedDate.ToString("dd.MM.yyyy HH:mm")</td>
                            <td>@item.Departman</td>
                            <td>@item.CostCenter</td>
                            <td>@item.HizmetTipi</td>
                            <td>@item.TalepStatusKisa</td>
                            <td>@item.TalepStatusAciklama</td>
                            <td>
                                <a asp-controller="Talep"
                                   asp-action="Detay"
                                   asp-route-id="@item.TalepID"
                                   class="btn btn-sm btn-outline-primary">
                                    @Localizer["Details"]
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

@section Scripts {
    <script>
        function filterTable() {
            var input = document.getElementById("filterInput");
            var filter = input.value.toUpperCase();
            var table = document.getElementById("talepTable");
            var tr = table.getElementsByTagName("tr");

            for (var i = 1; i < tr.length; i++) {
                var tds = tr[i].getElementsByTagName("td");
                var rowText = "";

                for (var j = 0; j < tds.length; j++) {
                    rowText += (tds[j].textContent || tds[j].innerText) + " ";
                }

                if (rowText.toUpperCase().indexOf(filter) > -1) {
                    tr[i].style.display = "";
                } else {
                    tr[i].style.display = "none";
                }
            }
        }
    </script>
}